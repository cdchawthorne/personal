#!/usr/bin/env zsh

if [[ -e ~/.mail/.dnd ]]; then
  echo â˜½
  exit 0
fi

old="$(ls ~/.mail/uwaterloo/Inbox/cur | grep -E ',[^S,]*$' | wc -l)"
new="$(ls ~/.mail/uwaterloo/Inbox/new | wc -l)"

total=$((old+new))

if [[ $total -ne 0 ]]; then
  echo "UW: $total"
fi

if [[ $new -ne 0 ]]; then
  echo '#00FFFF'
elif [[ $old -ne 0 ]]; then
  echo '#FF00FF'
fi

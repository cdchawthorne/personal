#!/usr/bin/env zsh

if [[ $# -ne 2 ]]; then
  echo "USAGE: $0 SPEAKERS_DEVICE HEADPHONE_DEVICE" >&2
  exit 1
fi

sink="$(wpctl inspect @DEFAULT_AUDIO_SINK@ | sed -rne 's_^.*node\.name \= "(.*)"$_\1_p')"
if [[ $sink == $1 ]]; then
  echo " "
elif [[ $sink == $2 ]]; then
  echo " "
else
  echo "?"
fi

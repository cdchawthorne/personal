function timestamp {
    date +'%Y%m%d-%H%M%S'
}

function pa {
    if [[ $# -eq 0 ]]; then
        num=1
    else
        num=$1
    fi

    dest=.
    for i in $(seq ${num}); do
        dest=${dest}/..
    done
    cd ${dest}
}

function to {
    cd "$(dirname $1)"
}

function x {
    if ! pgrep X &> /dev/null; then
        builtin cd
        command ssh-agent startx
    fi
}

function python {
    (
        export INPUTRC=${HOME}/.pyinputrc
        command python $@
    )
}

function umts {

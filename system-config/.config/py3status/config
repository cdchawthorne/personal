# TODO: limit mpd line width

# order += "mpd_status"
order += "external_script tidal"
order += "external_script audio_output"
order += "sysdata"
order += "volume master"
order += "time"

mpd_status {
  cache_timeout = 1
  host = "/home/cdchawthorne/.mpd/socket"
  format = "[[[{artist}] - {title}]|[{file}]]"
  hide_on_error = true
  separator_block_width = 30
}

external_script tidal {
  cache_timeout = 1
  script_path = "/home/cdchawthorne/bin/get-tidal-status"
  separator_block_width = 30
}

time {
  format = "⌚ %a %b %d %H:%M"
  separator_block_width = 30
}

volume master {
  device = "pulse"
  format = "♪ %volume"
  format_muted = "♪ %volume"
  separator_block_width = 30
}

sysdata {
  format = '[\?color=mem_used_percent Mem: {mem_used_percent}%]'
  separator_block_width = 30
  thresholds = [(0, "white"), (80, "degraded"), (90, "bad")]
}

external_script audio_output {
  cache_timeout = 2
  script_path = "/home/cdchawthorne/bin/read-sink alsa_output.pci-0000_00_1f.3.analog-stereo alsa_output.usb-SteelSeries_Arctis_7P_-00.analog-stereo"
  separator_block_width = 30
}

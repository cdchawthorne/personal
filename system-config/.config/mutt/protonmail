set imap_user='cdchawthorne@protonmail.com'
source "~/.config/mutt/protonmail-password"
set folder='imap://127.0.0.1:1143'
set spoolfile=+INBOX
# This gets set in the uwaterloo mailbox
set imap_keepalive=300

mailboxes +INBOX

set realname='cdchawthorne'
set from='cdchawthorne@protonmail.com'
set smtp_url="smtp://$imap_user:$imap_pass@127.0.0.1:1025"
set record='+Sent'
set postponed='+Folders/mutt-drafts'
# This gets set in the uwaterloo mailbox
unset smtp_authenticators

account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"

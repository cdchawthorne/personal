set imap_user=cdchawth
source "~/.config/mutt/uwaterloo-password"
set folder=imaps://connect.uwaterloo.ca
set spoolfile=+Inbox
set imap_keepalive=180

mailboxes +Inbox

set realname='cdchawthorne'
set from='cdchawthorne@uwaterloo.ca'
set smtp_url="smtp://$imap_user:$imap_pass@connect.uwaterloo.ca:587"
set record='+Sent Items'
set postponed='+Drafts'
#set ssl_starttls=yes
set smtp_authenticators=login

account-hook $folder "set imap_user=$imap_user imap_pass='$imap_pass'"

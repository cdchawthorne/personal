set $mod Mod4

set $term gnome-terminal

set $left h
set $down j
set $up k
set $right l

output * bg ~/media/pictures/friends-drawings/mars_kalu_com_2.png fit

floating_modifier $mod normal

bindsym $mod+f fullscreen
bindsym $mod+b bar mode toggle

bindsym $mod+Shift+p floating toggle
bindsym $mod+p focus mode_toggle

bindsym $mod+semicolon workspace back_and_forth
bindsym $mod+Shift+semicolon move container to workspace back_and_forth

bindsym $mod+period move workspace to output left

bindsym $mod+m focus output left
bindsym $mod+Shift+m move container to output left; focus output left

bindsym $mod+n scratchpad show
bindsym $mod+Shift+n move scratchpad

bindsym $mod+a focus parent
bindsym $mod+d focus child

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+u exec wpctl set-volume @DEFAULT_SINK@ 2%-
bindsym $mod+o exec wpctl set-volume @DEFAULT_SINK@ 2%+
bindsym $mod+Shift+u exec wpctl set-volume @DEFAULT_SINK@ 10%-
bindsym $mod+Shift+o exec wpctl set-volume @DEFAULT_SINK@ 10%+
bindsym $mod+i exec wpctl set-mute @DEFAULT_SINK@ toggle

bindsym Print exec grim -g "$(slurp -o)" - | wl-copy

bindsym XF86AudioPlay exec playerctl play-pause

bindsym $mod+space mode launcher
bindsym $mod+comma mode control

mode control {
  bindsym z exec poweroff; mode default
  bindsym x exec reboot; mode default
  bindsym q exit; mode default
  bindsym r reload; mode default

  bindsym b exec pere random; mode default
  bindsym n exec toggle-music; mode default
  bindsym s exec toggle-sink alsa_output.pci-0000_11_00.6.analog-stereo alsa_output.usb-SteelSeries_Arctis_7P_-00.analog-stereo; mode default
  bindsym k kill; mode default

  bindsym h splith; mode default
  bindsym v splitv; mode default
  # bindsym s layout stacking; mode default
  bindsym w layout tabbed; mode default
  bindsym e layout toggle split; mode default

  bindsym Escape mode default
}

mode launcher {
  bindsym f exec firefox -P work; mode default
  bindsym g exec firefox -P personal; mode default
  bindsym h exec chromium; mode default

  bindsym j exec tidal-hifi; mode default
  bindsym m exec $term --title music -- ncmpcpp; mode default

  bindsym c exec $term --title antares -- ssh -t antares dtach -A .dtach_socket nvim; mode default
  bindsym t exec $term; mode default
  bindsym Return exec $term -- nvim; mode default

  bindsym d exec discord; mode default
  bindsym s exec steam; mode default

  bindsym space exec wmenu-run; mode default

  bindsym Escape mode default
}

input * xkb_options compose:rwin

default_border pixel 10
client.focused #4c7899 #285577 #ffffff #2e9ef4 #1c76b4
workspace_layout tabbed
hide_edge_borders --i3 none

bar {
  swaybar_command waybar
}

assign [class="^discord$"] 6
assign [title="KeePassXC"] 7
for_window [class="tidal-hifi"] move to workspace 8

exec keepassxc .passwords/passwords.kdbx
exec wlsunset -l 43.4 -L -80.5

include /etc/sway/config.d/*
